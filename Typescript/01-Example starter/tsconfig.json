{
	"compilerOptions": {
		"outDir": "./", //Đường dẫn chứa kết quả (mã nguồn javascript)
		"rootDir": "./", //Đường dẫn chứa file Typescript
		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,
		"removeComments": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"exclude": ["node_modules"]
}
