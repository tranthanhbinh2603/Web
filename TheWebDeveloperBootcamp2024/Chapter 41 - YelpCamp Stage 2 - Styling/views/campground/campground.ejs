    <body class="d-flex flex-column vh-100">
        <%- include('../../partials/header') %>
            <div class="container offset-md-4 col-md-4">
                <div class="card mt-3 mb-3">
                    <img src="<%= campground.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <%= campground.location %>
                        </li>
                        <li class="list-group-item">
                            <%= campground.price %>
                        </li>
                    </ul>
                    <div class="card-body d-flex">
                        <a href="/campgrounds" class="btn btn-success me-1">Back</a>
                        <a href="/campground/<%= campground._id %>/edit" class="btn btn-info me-1">Edit</a>
                        <form action="/campground/<%= campground._id %>?_method=DELETE" method="post">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <div class="card-footer">
                        Card footer
                    </div>
                </div>

            </div>

