<%- include('../../partials/head') %>

    <body class="d-flex flex-column vh-100">
        <%- include('../../partials/header') %>
            <div class="container">
                <h1 class="mb-3 mt-3">Register</h1>
                <%- include('../../partials/flash') %>
                    <form action="/register" novalidate method="POST" class="main-form">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" id="email" class="form-control" name="email" autocomplete="off" required>
                            <div class="invalid-feedback">* Required</div>
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" class="form-control" name="username" autocomplete="off"
                                required>
                            <div class="invalid-feedback">* Required</div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" class="form-control" name="password" autocomplete="off"
                                required>
                            <div class="invalid-feedback">* Required</div>
                        </div>
                        <button class="btn btn-primary mb-3">Register</button>
                        <a href="/login" class="btn btn-primary mb-3"">Login</a>
                    </form>
            </div>
    </body>

    </html>

    <script src=" /javascript/validateform.js"></script>